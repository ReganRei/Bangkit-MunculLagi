<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RajaTawar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint_green</item>
        <item name="colorPrimaryVariant">@color/Malachite</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RajaTawar.TextView" parent="Base.Widget.AppCompat.TextView">
        <item name="color">@color/Eerie_Black</item>
    </style>

    <style name="RajaTawar.TextView.Title" parent="RajaTawar.TextView">
        <item name="color">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RajaTawar.TextView.Heading1" parent="RajaTawar.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RajaTawar.TextView.Heading2" parent="RajaTawar.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RajaTawar.TextView.Paragraph" parent="RajaTawar.TextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RajaTawar.EditText" parent="Widget.AppCompat.EditText">
        <item name="color">@color/Eerie_Black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>