<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_white"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/tv_item_detail"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:maxLength="80"
            android:maxLines="2"
            android:text="Kripik sirip ikan salmon butuh cepat dan banyak!"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            app:layout_constraintEnd_toStartOf="@+id/btn_fav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_detail">

            <TextView
                android:id="@+id/tv_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:justificationMode="inter_word"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In est ligula, eleifend vitae vestibulum sit amet, tempor a nulla. Duis aliquam orci sit amet ante gravida facilisis. Curabitur eu tempor dui. In hac habitasse platea dictumst. Pellentesque vestibulum pellentesque dolor vitae dignissim. Pellentesque tempor metus non aliquet vestibulum. Fusce volutpat dui in mauris elementum vestibulum. Maecenas ut consequat sem. Duis eu tortor a mauris laoreet vulputate et sed justo. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Quisque nisi enim, egestas nec ultrices ut, porta eu arcu. In ac mauris dignissim, porttitor ante nec, fringilla nulla. Vivamus a placerat augue, nec consectetur enim.  Nulla mi massa, laoreet at purus sit amet, luctus dignissim tellus. Duis sollicitudin nisl sapien, in blandit nulla fringilla et. Phasellus luctus arcu vel purus interdum imperdiet. Donec in iaculis nibh. Etiam ut nisl vestibulum, condimentum erat at, finibus mauris. Pellentesque mattis non dui ut venenatis. Nam eu nibh leo. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Sed velit ex, varius vel venenatis a, tempus id erat. Etiam sollicitudin mauris leo, et tincidunt felis accumsan at. Pellentesque consectetur tellus at suscipit porta. Etiam in commodo urna. Duis lobortis nec metus eget mollis. Interdum et malesuada fames ac ante ipsum primis in faucibus."
                android:textSize="14sp" />

        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_white"
            app:layout_constraintBottom_toTopOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline7" />


        <TextView
            android:id="@+id/tv_location_bid"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:drawableStart="@drawable/ic_outline_location_on_24"
            android:drawableLeft="@drawable/ic_outline_location_on_24"
            android:text="Surabaya"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/btn_deal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fill_green"
            android:padding="4dp"
            android:text="Mulai menawar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_location_bid"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <TextView
            android:id="@+id/tv_unit_bid"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_supplies"
            android:drawableLeft="@drawable/ic_supplies"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="100"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.4" />


        <TextView
            android:id="@+id/textView9"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="pcs"
            app:layout_constraintBottom_toBottomOf="@+id/btn_deal"
            app:layout_constraintEnd_toStartOf="@+id/tv_location_bid"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_unit_bid"
            app:layout_constraintTop_toTopOf="@+id/btn_deal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".9" />


        <TextView
            android:id="@+id/textView6"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="aaaaaaaaaaaaaaaaaaaa"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView2"
            app:layout_constraintStart_toEndOf="@+id/circleImageView2"
            app:layout_constraintTop_toTopOf="@+id/circleImageView2"
            app:layout_constraintVertical_bias="0.18" />


        <ToggleButton
            android:id="@+id/btn_fav"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/favorite_toggle"
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn=""
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/tv_price_high_bid"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"

            android:gravity="center"
            android:text="Rp 100.000"
            android:textColor="@color/Eerie_Black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_strip"
            app:layout_constraintStart_toEndOf="@+id/tv_strip"
            app:layout_constraintTop_toTopOf="@+id/tv_strip" />

        <TextView
            android:id="@+id/tv_price_low_bid"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"

            android:layout_marginLeft="14dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Rp 100.000"
            android:textColor="@color/Eerie_Black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_strip"
            style="@style/TextAppearance.AppCompat.Body1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@color/Eerie_Black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_low_bid"
            app:layout_constraintStart_toEndOf="@+id/tv_price_low_bid"
            app:layout_constraintTop_toTopOf="@+id/tv_price_low_bid" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_location_bid"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tv_location_bid"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_bid" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/vector_sales_login"
            app:civ_circle_background_color="@color/mint_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>